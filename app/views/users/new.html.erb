<div style="width:100%; text-align:right; background-color:#EBEBEB;">
	<% if session[:username] %>
	Welcome, <%=session[:username]%> &nbsp;<a href="/posts" style="color:#000000;">[Dashboard]</a> <a href="/user/logout" style="color:#000000;">[Logout]</a>
	<% else %>
	<a href="/user/login" style="color:#000000;">[Login]</a>
	<% end %>
</div>

<% if session[:username] %>
<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
<% else %>
	<p>Unauthorized!</p>
<% end %>